{
    "extends": "../tslint.json",
    "rules": {
      "no-string-literal": false,
      "directive-selector": [
        true,
        "attribute",
        "ngx",
        "camelCase"
      ],
      "variable-name": [
        true,
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ],
      "object-literal-key-quotes": [true, "consistent"],
      "component-selector": [
        true,
        "element",
        ["ngx", "ngx-internal"],
        "kebab-case"
      ],
      "prefer-for-of": false,
      "max-line-length": [
        true, 
        {
          "limit": 180, 
          "ignore-pattern": "^import [^,]+ from |^export | implements"
        }
      ]
    }
  }